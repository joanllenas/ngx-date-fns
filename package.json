{
  "name": "ngx-date-fns",
  "version": "0.0.0-development",
  "description": "date-fns pipes for Angular",
  "main": "bundle.js",
  "jsnext:main": "ngx-date-fns.module.js",
  "module": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "tslint": "tslint \"src/**/*.ts\"",
    "test": "rimraf ./tmp/mocha-webpack && mocha-webpack --opts 'mocha.opts'",
    "coverage": "NODE_ENV=coverage nyc npm test && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build:esm": "ngc -p tsconfig.esm.json",
    "build:bundle": "webpack --progress --colors",
    "build:aot": "ngc",
    "build": "rimraf build && npm run tslint && npm run build:esm && npm run build:bundle && npm run build:aot",
    "copy": "cp package.json dist && cp README.md dist",
    "semantic-release": "semantic-release pre && npm run copy && npm publish dist/ && semantic-release post",
    "precommit": "npm test",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joanllenas/ngx-date-fns"
  },
  "keywords": [
    "angular",
    "ngx",
    "angular2",
    "ng2",
    "date-fns",
    "date"
  ],
  "author": "Joan Llenas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joanllenas/ngx-date-fns/issues"
  },
  "homepage": "https://github.com/joanllenas/ngx-date-fns#readme",
  "peerDependencies": {
    "@angular/core": ">=2.0.0"
  },
  "devDependencies": {
    "@angular/common": "^4.1.3",
    "@angular/compiler": "^4.1.3",
    "@angular/compiler-cli": "^4.1.3",
    "@angular/core": "^4.1.3",
    "@angular/platform-browser": "^4.1.3",
    "@angular/platform-browser-dynamic": "^4.1.3",
    "@angular/platform-server": "^5.2.9",
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.14",
    "@types/sinon": "^2.2.2",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "chai": "^4.0.1",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "core-js": "^2.4.1",
    "cz-conventional-changelog": "^2.0.0",
    "ghooks": "^2.0.0",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jsdom": "^11.1.0",
    "mocha": "^3.4.1",
    "mocha-webpack": "^0.7.0",
    "nyc": "^10.3.2",
    "raw-loader": "^0.5.1",
    "request": "^2.81.0",
    "rimraf": "^2.6.1",
    "rxjs": "^5.4.0",
    "semantic-release": "^6.3.6",
    "sinon": "^2.3.2",
    "source-map-support": "^0.4.15",
    "tslint": "~4.5.1",
    "tslint-no-unused-var": "^0.0.6",
    "typescript": "2.3.x",
    "webpack": "^2.5.1",
    "webpack-node-externals": "^1.6.0",
    "zone.js": "^0.8.10"
  },
  "dependencies": {
    "css-loader": "^0.28.1",
    "date-fns": "^1.28.5",
    "postcss-loader": "^2.0.5",
    "sass-loader": "^6.0.5",
    "to-string-loader": "^1.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test"
    }
  }
}
